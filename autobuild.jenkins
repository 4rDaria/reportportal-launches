#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent any

    stages {
        stage("Prepare") {
            steps {
                git branch: 'module_9', url: 'https://github.com/4rDaria/reportportal-launches'
            }
        }

        stage("Build and start test image") {
            steps {
                bat 'mvn clean install -Dmaven.scm.provider.cvs.implementation=cvs_native'
            }
        }

        stage("Run tests") {
            steps {
                bat 'mvn test -Dmaven.scm.provider.cvs.implementation=cvs_native'
            }

            post {
                always {
                    junit "build/junit/*.xml"
                }
            }
        }
    }
}